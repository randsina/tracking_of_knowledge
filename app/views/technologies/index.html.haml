%h1 Listing technologies

%table
  %thead
    %tr
      %th
      %th
      %th

  %tbody
    - @technologies.each do |technology|
      %tr
        %td= link_to "#{technology.name}", technology, class: 'btn btn-default'
        -if can? :update, Technology
          %td= link_to 'Edit', edit_technology_path(technology), class: 'btn btn-info'
        -if can? :destroy, Technology
          %td= link_to 'Destroy', technology, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-warning'
%br

-if can? :create, Technology
  = link_to 'New Technology', new_technology_path, class: 'btn btn-success'
